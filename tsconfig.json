{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    //strictness

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // node
    "allowImportingTsExtensions": true,
    "module": "NodeNext",
    "noEmit": true,
    "lib": [
      "es2022"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
